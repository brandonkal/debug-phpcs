<?xml version="1.0"?>
<ruleset name="MyStandard">
    <rule ref="PEAR">
        <include-pattern>public/app/my-plugin</include-pattern>
        <include-pattern>public/app/themes/my-theme</include-pattern>
        <include-pattern>public/my-custom-file.php</include-pattern>
    </rule>
    <rule ref="Generic.CodeAnalysis.EmptyStatement">
        <include-pattern>public/app/my-plugin</include-pattern>
        <include-pattern>public/app/themes/my-theme</include-pattern>
        <include-pattern>public/my-custom-file.php</include-pattern>
        <severity>5</severity>
    </rule>
    <rule ref="Internal.NoCodeFound">
        <severity>0</severity>
    </rule>
</ruleset>